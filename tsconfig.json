{
  "compilerOptions": {
    "outDir": "./dist",
    "target": "es2020",
    "module": "commonjs",
    "strict": true,
    "sourceMap": true,
    "declaration": true,
    "noErrorTruncation": true,
    "esModuleInterop": true,
    "moduleResolution": "node"
  },
  "include": [
    "./src",
    "./src/**/*.ts",
    "./test",
    "./test/**/*.ts",
    "math-expression-example",
    "math-expression-example/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
